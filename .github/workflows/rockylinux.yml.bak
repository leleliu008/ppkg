name: Rocky Linux

on:
  push:
    branches: [ c ]
  pull_request:
    branches: [ c ]

jobs:
  test:
    runs-on: ubuntu-latest

    strategy:
      fail-fast: false
      matrix:
        tag: ['8', '8.5']

    container: rockylinux:${{ matrix.tag }}

    steps:
      - run: dnf -y update
      - run: dnf -y install curl xz gcc-c++

      - uses: actions/checkout@v3

      - run: bin/ppkg --help
      - run: bin/ppkg --version
      - run: bin/ppkg --homedir
      - run: bin/ppkg --homepage

      - run: bin/ppkg setup -v

      - run: bin/ppkg env

      - run: bin/ppkg integrate zsh

      - run: bin/ppkg update

      - run: bin/ppkg search lib
      - run: bin/ppkg search libzip

      - run: bin/ppkg formula-repo list

      - run: bin/ppkg formula view curl
      - run: bin/ppkg formula view libzip --paging=never

      - run: bin/ppkg info-available libzip
      - run: bin/ppkg info-available libzip version
      - run: bin/ppkg info-available libzip web-url
      - run: bin/ppkg info-available libzip src-url

      - run: bin/ppkg depends libzip

      - run: bin/ppkg depends libzip -t list
      - run: bin/ppkg depends libzip -t json
        #- run: bin/ppkg depends libzip -t dot
        #- run: bin/ppkg depends libzip -t txt

        #- run: bin/ppkg depends libzip -t list -o libzip-dependencies.list
        #- run: bin/ppkg depends libzip -t json -o libzip-dependencies.json
        #- run: bin/ppkg depends libzip -t dot  -o libzip-dependencies.dot
        #- run: bin/ppkg depends libzip -t txt  -o libzip-dependencies.txt
        #- run: bin/ppkg depends libzip -t png  -o libzip-dependencies.png

      - run: bin/ppkg install libzip

      - run: bin/ppkg tree libzip

      - run: bin/ppkg pack libzip
      - run: bin/ppkg pack libzip -t tar.gz
      - run: bin/ppkg pack libzip -t tar.xz
      - run: bin/ppkg pack libzip -t tar.bz2
        #- run: bin/ppkg pack libzip -t 7z
        #- run: bin/ppkg pack libzip -t zip

      - run: bin/ppkg ls-available
      - run: bin/ppkg ls-installed
      - run: bin/ppkg ls-outdated

      - run: bin/ppkg is-available libzip
      - run: bin/ppkg is-installed libzip
      - run: bin/ppkg is-outdated  libzip || echo 'not outdated'

      - run: bin/ppkg uninstall libzip

      - run: bin/ppkg fetch curl

      - run: bin/ppkg upgrade @self
